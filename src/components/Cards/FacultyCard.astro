---
import NotesData from "../../components/Data/notes.json";
interface Props {
  notes: typeof NotesData;
}
const { notes } = Astro.props as Props;
---

{
  notes.map((note) => (
    <article class="p-6 bg-[var(--card-bg)] rounded-3xl border border-[var(--card-border)] shadow-card">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold text-[var(--text-color)]">{note.faculty} - Semester {note.semester}</h2>
      </div>
      <div class="space-y-3">
        {note.subjects.map((sub) => (
          <div class="flex justify-between items-center border-t border-[var(--card-border)] pt-3">
            <span class="text-[var(--text-muted)]">{sub.name}</span>
            <a href={sub.link} class="text-lime-500 hover:text-lime-600 font-semibold" target="_blank" rel="noopener noreferrer">Download</a>
          </div>
        ))}
      </div>
    </article>
  ))
}