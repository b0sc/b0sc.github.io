---
import Container from "./Container.astro"
---

<footer class="bg-lime bg-fixed bg-bottom text-black">
  <Container>
    <div class="py-6">
      <div class="flex flex-col items-center justify-between md:flex-row">
        <div class="flex items-center space-x-3 rtl:space-x-reverse">
          <img class="w-auto h-8" src="/logo.png" alt="Logo" />-B-O-S-C
        </div>
        <div class="flex justify-center items-center mt-4 md:m-0">
          <a href="https://www.linkedin.com/company/b0sc/" target="_blank">
            <img src="/linkedin.png" alt="linkedin logo" />
          </a>
          <a href="https://facebook.com/birendraopensourceclub" target="_blank">
            <img src="/facebook.png" alt="facebook logo" />
          </a>
          <a
            href="https://instagram.com/birendraopensourceclub"
            target="_blank"
          >
            <img src="/instagram.png" alt="instagram logo" />
          </a>
          <a href="https://github.com/b0sc" target="_blank">
            <img src="/github.png" alt="github logo" />
          </a>
        </div>
        <div class="flex mt-4 md:m-0">
          <div class="-mx-4">
            @ <span id="currentYear"></span>
            <a
              href="https://github.com/b0sc"
              target="_blank"
              rel="noopener noreferrer"
              class="underline">b0sc</a
            >

          </div>
        </div>
      </div>
    </div>
  </Container>
</footer>

<script is:inline>
  const year = new Date().getFullYear()
  document.getElementById("currentYear").innerHTML = `${year}`
</script>
