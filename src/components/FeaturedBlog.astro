---
import Container from "./Container.astro"
import Topic from "./Topic.astro"
import TempData from "./Data/top-blogs.json"
---

<Container>
  <div class="relative flex flex-col items-center md:flex-row" id="topblogs">
    <Topic
      title="BOSC Blogs"
      description="Read the latest blogs from our community members and stay updated with the latest trends in the tech industry."
    />
  </div>
  <div class="flex-row items-center py-5 hidden md:block">
    <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 gap-4">
      {
        TempData.map(({ name1, name2, arrow, link, image }) => (
          // UPDATED: Replaced class={background} with theme-aware classes
          // NOTE: The `background` property from your JSON should be removed if it contains colors.
          <div class="p-8 rounded-lg border bg-card border-card-border flex justify-between items-center">
            <div class="flex-col justify-center items-start gap-[93px] inline-flex">
              <div class="flex-col justify-start items-start flex">
                {/* UPDATED: Added text-zinc-900 for better contrast on the lime background */}
                <div class="px-[7px] bg-lime-300 rounded-[7px] flex-col justify-start items-start gap-2.5 flex">
                  <div class="text-3xl font-medium text-zinc-900">{name1}</div>
                </div>
                <div class="px-[7px] bg-lime-300 rounded-[7px] flex-col justify-start items-start gap-2.5 flex">
                  <div class="text-3xl font-medium text-zinc-900">{name2}</div>
                </div>
              </div>
              <a
                class="justify-start items-center gap-[15px] inline-flex"
                href={link}
              >
                <div class="w-[41px] h-[41px] relative">
                  <img
                    class="w-[41px] h-[41px] left-0 top-0 absolute"
                    src={arrow}
                    alt="arrow icon"
                  />
                </div>
                {/* UPDATED: Used `text-text` for the link */}
                <div class="text-xl font-normal leading-7 text-text">
                  Learn more
                </div>
              </a>
            </div>
            <div class="w-[210px] h-[170px] pt-0.5 pb-[1.95px] justify-center items-center flex">
              <img class="hidden md:block" src={image} alt={`Image for ${name1} ${name2} blog`} />
            </div>
          </div>
        ))
      }
    </div>
  </div>
  <div class="w-full justify-center md:justify-end inline-flex">
    {/* UPDATED: Replaced all static color classes with theme variables for the button */}
    <a
      class="px-9 py-5 bg-primary-btn text-primary-btn-text hover:bg-primary-btn-hover hover:text-primary-btn-hover-text border border-card-border rounded-2xl justify-items-center md:justify-items-start gap-2.5 inline-flex"
      rel="noopener noreferrer"
      href="/explore/articles"
    >
      <h2 class="text-center text-xl font-normal leading-7">
        Read Blog Articles
      </h2>
    </a>
  </div>
</Container>