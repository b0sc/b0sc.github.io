---
import Layout from "../../layouts/Layout.astro";
import Container from "../../components/Container.astro";
import ExploreNav from "../../components/ExploreNav.astro";
import teamData from "../../components/Data/team.json";
import MemberCard from "../../components/Cards/MemberCard.astro";

export const prerender = true;
---

<Layout
  title="BOSC - Alumni"
  description="Meet the talented alumni of the Birendra Open Source Club."
>
  <main class="pt-7 pb-16">
    <Container>
      <div class="flex flex-col md:flex-row">
        <ExploreNav />

        <div class="flex-1 p-4">
          <div id="alumni-content">
            <h2
              class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-[var(--text-color)] text-center"
            >
              Alumni
            </h2>
            <div
              class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 mt-12"
            >
              <MemberCard members={teamData.alumni} />
            </div>
            <h2 class="col-span-4 text-center text-[var(--text-muted)] mt-8">
              If you are an alumni and want to be featured here, please create a
              pull request on our <a
                class="text-lime-500 hover:text-lime-600"
                href="https://github.com/b0sc/b0sc.github.io/"
              >
                GitHub Repo
              </a> with appropriate changes in the code.
            </h2>
          </div>
        </div>
      </div>
    </Container>
  </main>
</Layout>