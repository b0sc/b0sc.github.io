---
import Layout from "../../layouts/Layout.astro";
import Container from "../../components/Container.astro";
import ExploreNav from "../../components/ExploreNav.astro";
import oData from "../../components/Data/opportunities.json";
import OpportunityCard from "../../components/Cards/OpportunityCard.astro";

export const prerender = true;
---

<Layout
  title="BOSC - IT Opportunities"
  description="Find national and international IT jobs, internships, and opportunities curated by BOSC."
>
  <main class="pt-7 pb-16">
    <Container>
      <div class="flex flex-col md:flex-row">
        <ExploreNav />

        <div class="flex-1 p-4">
          <div id="opportunities-content">
            <h2
              class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-[var(--text-color)] text-center"
            >
              Opportunities in IT - International, National
            </h2>
            <div class="grid gap-8 lg:grid-cols-2 mt-12">
              <OpportunityCard opportunities={oData} />
            </div>
          </div>
        </div>
      </div>
    </Container>
  </main>
</Layout>