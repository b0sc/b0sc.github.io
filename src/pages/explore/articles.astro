---
import Layout from "../../layouts/Layout.astro";
import Container from "../../components/Container.astro";
import ExploreNav from "../../components/ExploreNav.astro";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import ArticleCard from "../../components/Cards/ArticleCard.astro";

const articles: CollectionEntry<"blog">[] = (await getCollection("blog")).sort(
  (a: CollectionEntry<"blog">, b: CollectionEntry<"blog">) =>
    b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout
  title="BOSC - Articles"
  description="BOSC's Official Website. Read IT Notes and Blogs..."
  image="https://bosc.org.np/team.jpg"
  url="https://bosc.org.np/explore/articles"
>
  <main class="pt-7 pb-16">
    <Container>
      <div class="flex flex-col md:flex-row">
        <ExploreNav />

        <div class="flex-1 p-4">
          <h2
            class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-[var(--text-color)] text-center"
          >
            Articles
          </h2>
          <div class="grid gap-8 lg:grid-cols-2 mt-12">
            <ArticleCard articles={articles} />
          </div>
        </div>
      </div>
    </Container>
  </main>
</Layout>