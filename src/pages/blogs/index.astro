---
// src/pages/blogs/index.astro
import Layout from "../../layouts/Layout.astro";
import Container from "../../components/Container.astro";
import BlogNav from "../../components/BlogNav.astro"; // <-- Import the nav
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import ArticleCard from "../../components/Cards/ArticleCard.astro";

const articles: CollectionEntry<"blog">[] = (await getCollection("blog")).sort(
  (a: CollectionEntry<"blog">, b: CollectionEntry<"blog">) =>
    b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---
<Layout
  title="BOSC - Blog"
  description="BOSC's Official Website. Read IT Notes and Blogs..."
  image="https://bosc.org.np/team.jpg"
  url="https://bosc.org.np/blogs"
>
  <main>
    <Container>
      <div class="flex flex-col md:flex-row">
        
        <BlogNav />

        <div class="flex-1 p-4">
          <h2 class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-gray-900 text-center">
            Articles
          </h2>
          <div class="grid gap-8 lg:grid-cols-2 mt-12">
            <ArticleCard articles={articles} />
          </div>
        </div>

      </div>
    </Container>
  </main>
</Layout>